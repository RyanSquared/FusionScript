using class;

-- basic class --

class Example {
	__init(a = 5)=>
		@a = a;
	print()=>
		print(@a);
}

a = Example();
b = Example(15);

-- local class --

local class ExampleLocal {

}

-- extension class --

class ExampleToo extends Example {
	__init(a, b = 10)=>
		@a, @b = a, b;
	print()->
		print(@b);
}

c = ExampleToo();
c:print(); -- @b
c:print<Example>(); -- @a

-- superinitialization --

class ExampleThree extends ExampleToo {
	__init(a, b)=>
		self:__init<ExampleToo>(a, b);
}
